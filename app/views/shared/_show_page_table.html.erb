<div class="meal-card-wrapper">

  <div class="meal-img-container">
    <% if meal.photo? %>
      <%= cl_image_tag meal.photo.path, class:"avatar" %>
    <% else %>
      <%= image_tag 'streetsurfer-foodtruck.jpg', class:"avatar" %>
    <% end %>
  </div>

  <div class="meal-description">
   <h4><%= meal.description %></h4>
  </div>

  <div class="price-chooser-wrapper">
    <div class="meal-price">
      <small><%= meal.price %></small>â‚¬
    </div>
    <div class="meals-form-wrapper">
      <%= render 'meals/form', truck: @truck, choice: choice %>
      <%= link_to "#", class:"ftft-plus ftft-choice" do %>
        <span class="fa-stack">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-plus" aria-hidden="true"></i>
        </span>
      <% end %>
      <%= link_to "#", class:"ftft-minus ftft-choice" do %>
        <span class="fa-stack">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-minus" aria-hidden="true"></i>
        </span>
      <% end %>
    </div>
  </div>

</div>


