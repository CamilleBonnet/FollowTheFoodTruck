<div id="user-and-meal-info" class="media media-meal" data-user-token="<%= current_user.registration.authentication_token %>" data-user-mail="<%= current_user.registration.email %>">
  <div class="media-left">
    <% if meal.photo? %>
    <div class="responsive-meal-picture" style="background-image:url(' <%= cl_image_path meal.photo.path %>');"></div>

    <% else %>
        <div class="responsive-meal-picture" style="background-image:url('<%= image_path 'streetsurfer-foodtruck.jpg' %>');"></div>
    <% end %>
  </div>
  <div class="media-body">
    <div class="media-description">
    <h4 class="media-heading">
      <%= meal.description %>
    </h4>
    <p>
    </p>
    </div>

  <div class="media-footer-container">
    <h6 class="price pull-right">
      â‚¬<%= meal.price %>
    </h6>
      <div class="media-footer">
        <span id="arrow-plus" class="fa-stack ftft-plus ftft-choice" data-meal-id="<%= choice.meal.id %>">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-plus fa-stack-1x" aria-hidden="true"></i>
        </span>
        <p><%= choice.quantity %></p>
        <span id="arrow-minus" class="fa-stack ftft-minus ftft-choice" data-meal-id="<%= choice.meal.id %>">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-minus fa-stack-1x" aria-hidden="true"></i>
        </span>
      </div>
  </div>

  </div>

</div>


