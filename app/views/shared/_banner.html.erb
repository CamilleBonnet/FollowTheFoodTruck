<div class="banner">
  <div class="banner-content">
    <h1 style="margin-top: 5px;">Follow The Food Truck</h1>
    <%= image_tag "001-food-truck.png" %>
    <p style="margin-bottom: 5px;">Eat outside !</p>
    <div class="search-form-wrapper" style="color: gray;">
      <form action="<%= trucks_path %>" method="get" class="form-inline" for="flat_address">
        <%= text_field_tag :city_user, params[:city_user], id:"food_truck_address", :autofocus => true, required: false, class:"text-left search-navbar" %>
        <%= submit_tag "Search", :name => nil, class: "btn ftft-btn btn-danger", style:"margin-bottom : 0px;" %>
      </form>
    </div>
  </div>
</div>





