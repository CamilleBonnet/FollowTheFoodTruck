<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <h3 class="text-center">Orders list for your truck</h2>
        <%= render 'shared/truck_card', truck: @truck%>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class="message-order">
        <% @baskets.each do |basket| %>
          <%= render 'shared/list_truck_orders', basket: basket %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
