<div class="message">
  <div class="img-name">
    <% if basket.user.photo? %>
    <%= cl_image_tag basket.user.photo.path, class: "avatar" %>
    <% else %>
    <%= image_tag basket.user.facebook_picture_url || "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar " %>
    <% end %>
    <div class="message-name">
      <h3><%= basket.user.first_name %></h3>
    </div>
  </div>
  <div class="message-body">
    <p><strong>Order:</strong></p>
    <% basket.choices.each do |choice| %>
    <div><%= choice.quantity.to_s+": "+choice.meal.description %></div>
    <% end %>
  </div>
  <div class="message-body">
    <% if basket.status == "pending" %>
    <p class="status pending"><%= basket.status.capitalize %></p>
    <% elsif basket.status == "confirmed" || basket.status == "Payed by Customer" || basket.status == "Accepted by FoodTruck" %>
    <p class="status accepted"><%= basket.status.capitalize %></p>
    <% elsif basket.status == "Declined by FoodTruck" %>
    <p class="status declined"><%= basket.status.capitalize %></p>
    <% end %>
    <p class="price"><%= basket.total_price %>â‚¬</p>
  </div>
  <div class="message-buttons">
    <% if basket.status == "pending" %>
      <%= link_to accepted_by_food_truck_truck_basket_path(basket.truck, basket) do %>
        <p class="accepted"><i class="fa fa-check" aria-hidden="true"></i></p>
      <% end %>
      <%= link_to declined_by_food_truck_truck_basket_path(basket.truck, basket) do %>
        <p class="declined"><i class="fa fa-times " aria-hidden="true"></i></p>
      <% end %>
    <% end %>
    <% if basket.status == "confirmed" || basket.status == "Payed by Customer" || basket.status == "Accepted by FoodTruck" || basket.status == "Declined by FoodTruck" %>
      <%= link_to accepted_by_food_truck_truck_basket_path(basket.truck, basket) do %>
        <p class="accepted"><i class="fa fa-check " aria-hidden="true"></i></p>
      <% end %>
      <%= link_to declined_by_food_truck_truck_basket_path(basket.truck, basket) do %>
        <p class="declined"><i class="fa fa-times " aria-hidden="true"></i></p>
      <% end %>
    <% end %>
  </div>
</div>
