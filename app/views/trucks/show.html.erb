<div>
  <%= render 'shared/banner_truck', truck: @truck %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-truck">
        <div class="truck-name"></div>
          <h2><%= @truck.name %></h2>
        </div>
        <div class="food-type">
          <%= @truck.type_of_food %>
        </div>
      </div>
      <h3 class="text-center">Meals list</h3>
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <% @tables.each do |table| %>
          <%= render 'shared/show_page_table', meal: table[:meal], choice: table[:choice] %>
        <% end %>
      </div>
    </div>
<%#raise %>
    <div class="row">
      <div class="col-xs-12">
        <div class="btn-show text-center">
          <% unless @basket.nil? %>
          <%= link_to "Order", truck_basket_path(@truck, @basket), class:"btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

