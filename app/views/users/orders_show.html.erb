<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h3 class="text-center"><%= @user.first_name %>, here is a list of all your current orders</h3>

      <div class="message-order">
        <% @user.baskets.order(:status).each do |basket| %>
        <%= render 'shared/list_user_orders', basket: basket %>
        <% end %>
      </div>
    </div>
  </div>
</div>


