<div class="media media-meal">
  <div class="media-left">
    <% if meal.photo? %>
      <%= cl_image_tag meal.photo.path, class:"avatar-square" %>
    <% else %>
      <%= image_tag 'streetsurfer-foodtruck.jpg', class:"avatar-square" %>
    <% end %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= meal.description %></h4>
    <h6 class="price pull-right">â‚¬<%= meal.price %></h6>
    <p><small>spicy</small></p>
  </div>
  <div class="media-footer">
    <a href="#" class="btn btn-round btn-primary">
      <i class="fa fa-plus"></i> add to cart
    </a>
  </div>
</div>
<div>

  <div class="price-chooser-wrapper">
    <div class="meals-form-wrapper">
      <%= render 'shared/form_choice_change_quantity', truck: @truck, choice: choice %>
      <%= link_to "#", class:"ftft-plus ftft-choice" do %>
        <span class="fa-stack">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-plus fa-stack-1x" aria-hidden="true"></i>
        </span>
      <% end %>
      <%= link_to "#", class:"ftft-minus ftft-choice" do %>
        <span class="fa-stack">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-minus fa-stack-1x" aria-hidden="true"></i>
        </span>
      <% end %>
    </div>
  </div>

</div>


