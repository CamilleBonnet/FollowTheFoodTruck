<div class="yellow-box">
  <h5>Orders list for your truck</h5>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= render 'shared/truck_card', truck: @truck%>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="message-order">
        <% @baskets.each do |basket| %>
          <%= render 'shared/list_truck_orders', basket: basket %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
