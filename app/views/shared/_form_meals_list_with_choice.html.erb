<div class="media media-meal">
  <div class="media-left">
    <% if meal.photo? %>
      <%= cl_image_tag meal.photo.path, class:"avatar-square" %>
    <% else %>
      <%= image_tag 'streetsurfer-foodtruck.jpg', class:"avatar-square" %>
    <% end %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= meal.description %></h4>
    <h6 class="price pull-right">â‚¬<%= meal.price %></h6>
    <p><small>spicy</small></p>
  </div>
  <div class="media-footer">
    <span id="arrow-plus" class="fa-stack ftft-plus ftft-choice" data-meal-id="<%= choice.meal.id %>">
      <i class="fa fa-square-o fa-stack-2x"></i>
      <i class="fa fa-plus fa-stack-1x" aria-hidden="true"></i>
    </span>
    <p><%= choice.quantity %></p>
    <span id="arrow-minus" class="fa-stack ftft-minus ftft-choice" data-meal-id="<%= choice.meal.id %>">
      <i class="fa fa-square-o fa-stack-2x"></i>
      <i class="fa fa-minus fa-stack-1x" aria-hidden="true"></i>
    </span>
  </div>
