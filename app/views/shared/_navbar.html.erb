<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "ftt.png", height: 50 %>
  <% end %>
  <div class="navbar-wagon-right hidden-xs hidden-sm">

  <div class="search-form-wrapper">
    <form action="<%= trucks_path %>" method="get" class="form-inline" for="flat_address">
      <%= text_field_tag :city_user, params[:city_user], id:"flat_address", :autofocus => true, required: false, class:"text-left search-navbar" %>
      <%= submit_tag "Search", :name => nil, class: "btn ftft-btn btn-primary", style:"margin-bottom : 5px;" %>
    </form>
  </div>

  <!-- Right Navigation -->

    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <%= link_to "All the trucks", trucks_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% if Truck.find_by(user: current_user) %>
      <%= link_to "My truck", owner_truck_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Meal to prepare", order_owner_truck_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% else %>
      <%= link_to "Become a Truck Owner", new_truck_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
    <%= link_to "My orders", myorders_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.photo? %>
        <%= cl_image_tag current_user.photo.path, class: "avatar dropdown-toggle", class: "avatar dropdown-toggle" , id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= image_tag current_user.facebook_picture_url ||  "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", class: "avatar dropdown-toggle" , id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to myprofile_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_profile_path(current_user) do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Edit my profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_registration_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_up", default: "Sign up"), new_registration_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to t(".sign_in", default: "Login"), new_registration_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->


  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "All the trucks", trucks_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% if user_signed_in? %>
        <li><% if Truck.find_by(user: current_user) %>
          <%= link_to "My truck", owner_truck_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Meal to prepare", order_owner_truck_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "Customer orders", "#", class: "navbar-wagon-item navbar-wagon-link" %>
          <% else %>
          <%= link_to "Become a Truck Owner", new_truck_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "My orders", "#", class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
        <% end %>
        <li>
          <%= link_to myprofile_path do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_profile_path(current_user) do %>
          <i class="fa fa-cog"></i>  <%= t(".settings", default: "Edit profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_registration_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>

