<% addresses.each do |address| %>
  <div class="col-xs-12 col-sm-6">
    <div class="address-card">
      <div class="card-information">
        <h5>
          <%= address.street_address %>
        </h5>
        <p>
          <%= address.street_address_2 %>
        </p>
        <p>
          <%= address.city %> <%= address.zipcode %>
        </p>
        <p>
          <%= address.more_info %>
        </p>
      </div>
      <div class="footer">
        <%= link_to "Edit", edit_truck_address_path(@truck, address), class: "btn ftft-btn btn-primary" %>
        <%= link_to "Delete", address_path(address), method: :delete,data: { confirm: "Are you sure?" }, class: "btn ftft-btn btn-danger" %>
        <%= link_to "Set to Active", set_active_address_truck_address_path(@truck, address),class: "btn ftft-btn btn-warning" %>
      </div>
    </div>
  </div>
<% end %>
