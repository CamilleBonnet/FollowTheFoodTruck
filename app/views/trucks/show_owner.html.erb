
<div class="truck-dashboard">
  <div class="calendar-section">
    <div class="col-xs-12 col-sm-6">
      <div class="content text-center">
        <% @truck.photos.each do |photo| %>
        <%= cl_image_tag photo.path, class: "photo-full-width" if @truck.photos? %>
        <% end %>
        <h2><%= link_to @truck.name, truck_path(@truck) %></h2>
        <div class="footer">
          <br>
          <%= link_to "Check orders", order_owner_truck_path, class: "btn ftft-btn btn-success" %>
          <%= link_to 'Edit', edit_truck_path(@truck), class: "btn ftft-btn btn-warning" %>
          <%= link_to "Delete", truck_path(@truck),
          method: :delete, data: { confirm: "Are you sure?" },class: "btn ftft-btn btn-danger" %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <%= render "shared/description_calendar" %>
    </div>
  </div>

  <div class="meals-section">
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="content text-center">
        <h2> Meals</h2>
        <% @truck.meals.each do |meal| %>
          <%= cl_image_tag meal.photo.path, width: 250, height: 250, crop: :fill if meal.photo? %>
          <div class="title">
            <h4><%= meal.description%> </h4>
            Price : <%= meal.price %> â‚¬
          </div>
          <%="Vegan? " + (meal.is_vegan ? 'Yes' : 'No').to_s unless meal.is_vegan == false %>
          <br>
          <%= "Alergen? " + (meal.is_alergen ? 'Yes' : 'No').to_s unless meal.is_alergen == false %>
          <br>
          <%= "Gluten free? " + (meal.is_gluten_free ? 'Yes' : 'No').to_s unless meal.is_gluten_free == false %>
          <br>
          <%= "Fat free? " + (meal.is_fat_free ? 'Yes' : 'No').to_s unless meal.is_fat_free == false %>
          <br>
          <%= "How Spicy => " + (meal.spicy_scale).to_s unless meal.spicy_scale == nil %>
          <div class="footer">
            <br>
              <%= link_to "Edit", edit_truck_meal_path(@truck, meal), class: "btn ftft-btn btn-primary" %>
              <%= link_to "Delete", meal_path(meal), method: :delete,data: { confirm: "Are you sure?" }, class: "btn ftft-btn btn-danger" %>
              <%= link_to "Add a meal", edit_truck_meal_path(@truck, meal), class: "btn ftft-btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="locations-section">
     <h2> Location</h2>
    <div class="col-xs-12 col-sm-6">
      <div class="content text-center">
        <%= link_to "Edit", class: "btn ftft-btn btn-primary" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="content text-center">
        <%= link_to "Set to Active", class: "btn ftft-btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
